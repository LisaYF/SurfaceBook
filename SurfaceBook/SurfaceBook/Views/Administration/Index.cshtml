@model IEnumerable<SurfaceBook.Models.Administration>

<style>
    div{
        color:white;
    }

</style>
@using (Html.BeginForm())
{
    <p style="position:absolute;right:100px; top:100px; z-index:1500;">
        Product Name: @Html.TextBox("searchValue")<br />
    </p>
    <input style="position:absolute;right:0px; top:100px;  z-index:1500;" type="submit" value="Search" />

}
<img id="manageimg1" style="position:relative;height:575px;width:1360px;opacity:0.1;z-index:500;" src="~/Images/manage9.jpg" />

<div id="all" style="position:absolute;top:130px;left:0px;z-index:1000;"> 
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "Create")
    }
    &nbsp;
    <div style="color:aqua; position:absolute; top:0px; right:0px;">
        
    
 </div>
    <table>
        
        <tr>
            <th style="color:skyblue;">
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th style="color:skyblue;">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th style="color:skyblue;">
                @Html.DisplayNameFor(model => model.Introduction)
            </th>
            <th style="color:skyblue;">
                @Html.DisplayNameFor(model => model.TheSalesAmount)
            </th>
            <th style="color:skyblue;">
                @Html.DisplayNameFor(model => model.Evaluation)
            </th>
            <th style="color:skyblue;">
                @Html.DisplayNameFor(model => model.NumberOfBusinesses)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="color:white;">
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td style="color:white;">
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td style="color:white;">
                    @Html.DisplayFor(modelItem => item.Introduction)
                </td>
                <td style="color:white;">
                    @Html.DisplayFor(modelItem => item.TheSalesAmount)
                </td>
                <td style="color:white;">
                    @Html.DisplayFor(modelItem => item.Evaluation)
                </td>
                <td style="color:white;">
                    @Html.DisplayFor(modelItem => item.NumberOfBusinesses)
                </td>
                
                    <td  >
                        @if (User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("Edit|", "Edit", new { id = item.Id }) 
                            @Html.ActionLink("Details|", "Details", new { id = item.Id }) 
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        }
                    </td>
                 
            </tr>
        }

    </table>
</div>
